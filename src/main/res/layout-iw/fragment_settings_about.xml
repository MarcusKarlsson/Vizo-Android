<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_back_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:contentDescription="@string/app_name"
            android:padding="12dp"
            android:src="@drawable/icon_back" />

        <com.vizo.news.ui.VizoTextView
            style="@style/White_TextView_Style"
            android:layout_centerInParent="true"
            android:text="@string/About"
            android:textStyle="bold" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="@string/app_name"
                android:src="@drawable/icon_logo" />

            <com.vizo.news.ui.VizoTextView
                android:id="@+id/vizoVersion"
                style="@style/White_TextView_Style"
                android:text="@string/vizo_version"
                android:textSize="38dp" />

            <com.vizo.news.ui.VizoTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/vizo_copyright"
                android:textColor="#66FFFFFF"
                android:textSize="10dp" />
        </LinearLayout>

        <com.vizo.news.ui.VizoTextView
            style="@style/White_TextView_Style"
            android:layout_width="match_parent"
            android:layout_marginBottom="18dp"
            android:layout_marginTop="18dp"
            android:autoText="false"
            android:elegantTextHeight="false"
            android:gravity="right"
            android:lineSpacingExtra="3dp"
            android:text="@string/vizo_about"
            android:textSize="18dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@drawable/divider" />

        <RelativeLayout
            android:id="@+id/rl_tos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="16dp"
            android:paddingTop="16dp">

            <com.vizo.news.ui.VizoTextView
                style="@style/White_TextView_Style"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:text="@string/Terms_of_Service"
                android:textSize="16dp" />

            <ImageView
                android:layout_width="8dp"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:contentDescription="@string/app_name"
                android:src="@drawable/arrow_left" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@drawable/divider" />

        <RelativeLayout
            android:id="@+id/rl_privacy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="16dp"
            android:paddingTop="16dp">

            <com.vizo.news.ui.VizoTextView
                style="@style/White_TextView_Style"
                android:layout_alignParentRight="true"
                android:text="@string/Privacy_Policy"
                android:textSize="16dp" />

            <ImageView
                android:layout_width="8dp"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:src="@drawable/arrow_left" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@drawable/divider" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="16dp"
            android:paddingTop="16dp"
            android:visibility="gone">

            <com.vizo.news.ui.VizoTextView
                style="@style/White_TextView_Style"
                android:layout_alignParentRight="true"
                android:text="@string/Credits"
                android:textSize="16dp" />

            <ImageView
                android:layout_width="8dp"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:contentDescription="@string/app_name"
                android:src="@drawable/arrow_left" />
        </RelativeLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="@drawable/divider"
            android:visibility="gone" />
    </LinearLayout>
</LinearLayout>
