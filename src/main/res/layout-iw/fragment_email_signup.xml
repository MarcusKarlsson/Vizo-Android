<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="4dp">

        <com.vizo.news.ui.VizoTextView
            android:id="@+id/tv_back_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:padding="12dp"
            android:text="@string/back"
            android:textColor="@color/white"
            android:textSize="16dp" />

        <com.vizo.news.ui.VizoTextView
            style="@style/White_TextView_Style"
            android:layout_centerInParent="true"
            android:text="@string/Create_Account"
            android:textStyle="bold" />

        <com.vizo.news.ui.VizoTextView
            android:id="@+id/tv_next_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:padding="12dp"
            android:text="@string/next"
            android:textColor="@color/white"
            android:textSize="16dp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:layout_marginTop="36dp"
        android:visibility="gone">

        <com.vizo.news.ui.VizoRoundedImageView
            android:id="@+id/btn_add_photo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/circular_grey_bg"
            android:scaleType="centerCrop" />

        <com.vizo.news.ui.VizoTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:drawableTop="@drawable/icon_camera"
            android:text="@string/Add_Photo"
            android:textColor="@color/white" />
    </RelativeLayout>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:divider="@drawable/divider"
        android:focusable="true"
        android:padding="36dp"
        android:showDividers="middle|end">

        <TableRow>

            <com.vizo.news.ui.VizoEditText
                android:id="@+id/et_first_name"
                android:layout_width="0dp"
                android:layout_weight="100"
                android:autoText="false"
                android:background="@color/transparent"
                android:gravity="right"
                android:hint="@string/First_Name"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:singleLine="true"
                android:textColor="@color/white"
                android:textColorHint="@color/grey"
                android:textCursorDrawable="@null"
                android:textSize="16dp" />
        </TableRow>

        <TableRow>

            <com.vizo.news.ui.VizoEditText
                android:id="@+id/et_last_name"
                android:layout_width="0dp"
                android:layout_weight="100"
                android:autoText="false"
                android:background="@color/transparent"
                android:gravity="right"
                android:hint="@string/Last_Name"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:singleLine="true"
                android:textColor="@color/white"
                android:textColorHint="@color/grey"
                android:textCursorDrawable="@null"
                android:textSize="16dp" />
        </TableRow>

        <TableRow>

            <com.vizo.news.ui.VizoEditText
                android:id="@+id/et_email_address"
                android:layout_width="0dp"
                android:layout_weight="100"
                android:autoText="false"
                android:background="@color/transparent"
                android:gravity="right"
                android:hint="@string/Email_Address"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:singleLine="true"
                android:textColor="@color/white"
                android:textColorHint="@color/grey"
                android:textCursorDrawable="@null"
                android:textSize="16dp" />
        </TableRow>

        <TableRow>

            <com.vizo.news.ui.VizoEditText
                android:id="@+id/et_password"
                android:layout_width="0dp"
                android:layout_weight="100"
                android:autoText="false"
                android:background="@color/transparent"
                android:gravity="right"
                android:hint="@string/Password"
                android:inputType="textPassword"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:singleLine="true"
                android:textColor="@color/white"
                android:textColorHint="@color/grey"
                android:textCursorDrawable="@null"
                android:textSize="16dp" />
        </TableRow>
    </TableLayout>
</LinearLayout>